@model PizzaChallenge.Model.Product

@{
    ViewData["Title"] = "Slet Produkt";
}

<h2>Slet Produkt:</h2>

<h3>Er du sikker på du ønsker at slette dette produkt?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Navn
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Beskrivelse
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            Pris
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            Tilbehør
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ingredients)
        </dd>
    </dl>
    
    <form asp-action="DeleteProduct">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Slet" class="btn btn-default" /> |
        <a asp-action="Index">Fortryd</a>
    </form>
</div>
